{
  "name": "puree",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "release": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.8.4",
    "turbo": "^1.8.2"
  }
}
